{
  "name": "atra",
  "version": "0.0.7",
  "author": "kthjm <toxictoxer@gmail.com>",
  "repository": "kthjm/atra",
  "license": "MIT",
  "description": "atra works for attributes in JSX.",
  "keywords": [],
  "main": "dist/index.js",
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": ["last 2 Chrome versions"]
              },
              "debug": true
            }
          ],
          "power-assert"
        ],
        "plugins": ["istanbul"]
      },
      "build": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": ["last 2 versions", "safari >= 7"]
              },
              "debug": true
            }
          ],
          "flow"
        ],
        "plugins": ["array-includes"]
      }
    }
  },
  "nyc": {
    "require": ["babel-register"],
    "include": ["src"],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "flow": "flow",
    "nycha": "nyc mocha -t 10000",
    "test": "cross-env NODE_ENV=test run-s flow nycha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "copy": "flow-copy-source ./src ./lib",
    "format": "prettier --write **/*.js package.json",
    "prebuild": "yarn format",
    "build": "cross-env NODE_ENV=build babel ./src -d ./lib",
    "postbuild": "run-s copy format",
    "node": "node --require babel-register"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-power-assert": "^1.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.5",
    "flow-bin": "^0.57.2",
    "flow-copy-source": "^1.2.1",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.2.1",
    "power-assert": "^1.4.4",
    "prettier": "^1.7.4"
  }
}
